<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.sqlite.JDBC</property>
        <property name="connection.url">jdbc:sqlite:src/main/java/com/example/product/registry/data/Product.db
        </property>
        <property name="dialect">org.sqlite.hibernate.dialect.SQLiteDialect</property>
        <mapping class="com.example.product.registry.model.Product"/>
    </session-factory>
</hibernate-configuration>